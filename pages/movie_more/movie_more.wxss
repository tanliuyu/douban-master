/* pages/movie_more/movie_more.wxss */
.movie_more{
  width: 100%;
  justify-content: space-between;
  margin:0 20rpx;
}

.movie_box{
  width: 140rpx;
  height: auto;
  margin:10rpx 48rpx;
  border-radius: 10rpx;
  display: inline-block;
}

.movie_img{
  width: 100%;
  height: 190rpx;
  border-radius: 10rpx;
}



.movie_name{
  height: auto;
  font-size: 26rpx;
  max-lines: 1;
  text-align: center;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.movie-score{
  height: auto;
  font-size: 22rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  max-lines: 1;
}