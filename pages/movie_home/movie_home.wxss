/* pages/movie_home/movie_home.wxss */
.search {
  position: relative;
  width: 100%;
  height: 80rpx;
  background-color: #42BD55;
  display: inline-flex;
  top: 0;
}

.btn_search {
  position: relative;
  width: 95%;
  height: 40rpx;
  background-color: #fff;
  margin: 0 auto;
  align-self: center;
  color: #8E8E8E;
  font-size: 24rpx;
  text-align: center;
  border-radius: 10rpx;
  padding-top: 8rpx;
}

.movie_first_title {
  position: relative;
  width:100%;
  height: 70rpx;
  display: inline-flex;
}

.movie_type{
  position: absolute;
  font-size: 26rpx;
  align-self: center;
  left:30rpx;
  color: #525151;
}

.movie_more {
  position: absolute;
  color: #42BD55;
  position: absolute;
  right: 30rpx;
  font-size: 26rpx;
  align-self: center;
}

.scroll_view {
  position: relative;
  width: 100%;
  height: 260rpx;
  white-space: nowrap;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.movie_box {
  width: 140rpx;
  height: auto;
  margin-left: 30rpx;
  border-radius: 10rpx;
  display: inline-block;

}

.movie_img {
  width: 100%;
  height: 190rpx;
  border-radius: 10rpx;
  
}

.movie_name {
  font-size: 26rpx;
  max-lines: 1;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.movie-score {
  font-size: 22rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  max-lines: 1;
}

.movie_textinfo {
  width: 100%;
  height: 60rpx;
}